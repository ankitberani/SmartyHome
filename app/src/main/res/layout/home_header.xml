<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/homehead"
    android:background="@color/backgroundclr"
    android:padding="@dimen/dp_20">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivleftIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.AppCompatImageView>

    <com.smartyhome.app.utils.TextviewLight
        android:id="@+id/tvTitelText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_30"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/control_panel"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="@+id/ivleftIcon"
        app:layout_constraintEnd_toStartOf="@+id/ivRightIcon"
        app:layout_constraintStart_toEndOf="@+id/ivleftIcon"
        app:layout_constraintTop_toTopOf="@+id/ivleftIcon"
        tools:text="Device2" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivRightIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_bell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.AppCompatImageView>


</androidx.constraintlayout.widget.ConstraintLayout>