<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp">

    <com.smartyhome.app.utils.TextviewBold
        android:id="@+id/tv_title_dialog"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_18" />

    <EditText
        android:id="@+id/diaEditName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:hint="@string/enter_name"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom|end|center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <com.smartyhome.app.utils.TextviewBold
            android:id="@+id/dia_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:text="Cancel"
            android:fontFamily="@font/poppins_bold"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:textColorHint="#45ffffff"
            android:textSize="16sp"
            android:layout_marginEnd="@dimen/dp_10" />

        <com.smartyhome.app.utils.TextviewBold
            android:id="@+id/dia_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:fontFamily="@font/poppins_bold"
            android:padding="@dimen/dp_5"
            android:text="Change"
            android:textAllCaps="true"
            android:textColor="@color/backgroundclr"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>