<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roomCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/roonChildCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:id="@+id/cardRoom"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/gradtwo"
            android:gravity="center"
            app:layout_constraintCircleRadius="5dp">

            <TextView
                android:id="@+id/roomName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Guest Room"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:capitalize="words" />

            <TextView
                android:id="@+id/no_of_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. of Devices"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:visibility="gone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_add_room"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:clickable="true"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"

            android:gravity="center"
            android:text="+"
            android:textSize="70sp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>