<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scaleType="centerCrop"
        tools:context=".main.SplashActivity">

        <com.smartyhome.app.utils.TextviewBold
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundclr"
            android:padding="@dimen/dp_15"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title"></com.smartyhome.app.utils.TextviewBold>

        <com.smartyhome.app.utils.TextviewLight
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:padding="@dimen/dp_15"
            android:textColor="@color/backgroundclr"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="Are you sure, want to logout ?"></com.smartyhome.app.utils.TextviewLight>


        <com.smartyhome.app.utils.TextviewLight
            android:id="@+id/btnYes"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/yes"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMsg" />


        <com.smartyhome.app.utils.TextviewLight
            android:id="@+id/btnNo"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toStartOf="@+id/btnYes"
            app:layout_constraintTop_toBottomOf="@+id/tvMsg"></com.smartyhome.app.utils.TextviewLight>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>